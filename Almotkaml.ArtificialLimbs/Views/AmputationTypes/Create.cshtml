@model Almotkaml.ArtificialLimbs.Models.AmputationTypesModel
@{
    ViewBag.Title = "إضافة نوع البتر";
}


@using (Html.BeginForm("Create", "AmputationTypes", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="row">
    <div class="col-lg-12 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title ">إضافة نوع البتر</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.AmputationName)
                            @Html.TextBoxFor(model => model.AmputationName, new { @class = "field_area form-control" })
                            @Html.ValidationMessageFor(model => model.AmputationName)
                        </div>
                    </div>
                    <div class="row">
                        <input type="submit" value="حفظ" class="btn btn-success"  />
                        @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                    </div>
                            
                </form>
            </div>
        </div>
    </div>
           
</div>

}


