@model Almotkaml.ArtificialLimbs.Models.CountryModel
@using Almotkaml.ArtificialLimbs.Global.Herbler
@*@model  IEnumerable < Almotkaml.ArtificialLimbs.Core.Domain.Country >*@ 

@{
    ViewBag.Title = "البلدان";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>البلدان</title>
</head>
<body>
    <p>
        @if (Model.CanCreate)
        {@Html.ActionLink("اضافة", "Create", null, new { @class = "btn btn-success" })}
    </p>
    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title">بيانات البلدان</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    @Html.Note()
                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover dataTables-example">
                            <thead>
                                <tr>
                                    <th>ر.ت</th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Name)
                                    </th>
                                    @if (Model.CanEdit)
                                    {
                                    <th>التعديل</th>}
                                    @if (Model.CanDelete)
                                    {
                                    <th>الحذف</th>}
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    var count = 0;
                                }
                                @foreach (var item in Model.CountryGrid)
                                {
                                    count++;
                                    <tr class="gradeX">
                                        <td>@count</td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        @if (Model.CanEdit)
                                        {
                                        <td>
                                            @Html.ActionLink("تعديل", "Edit", new { id = item.CountryId }, new { @class = "btn btn-primary" })
                                        </td>}
                                        @if (Model.CanDelete)
                                        {
                                        <td>
                                            @Html.ActionLink("حذف", "Delete", new { id = item.CountryId }, new { @class = "btn btn-danger" })
                                        </td>}
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
