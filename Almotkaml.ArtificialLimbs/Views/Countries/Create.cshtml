@using Almotkaml.ArtificialLimbs.Global.Herbler;
@model Almotkaml.ArtificialLimbs.Models.CountryModel
@{
    ViewBag.Title = "اضافة بلد";
}


@using (Html.BeginForm("Create", "Countries", FormMethod.Post, new { enctype = "multipart/form-data" })) 
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


<div class="row">
    <div class="col-lg-12 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title ">اضافة بلد</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="form-group col-md-4">
                            @Html.LabelFor(model => model.Name)
                            @Html.TextBoxFor(model => model.Name, new { @class = "field_area form-control" })
                            @Html.ValidationMessageFor(model => model.Name)
                            @*@Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control " } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })*@
                        </div>

                        @*<div class="form-group col-md-4">
                            @Html.LabelFor(model => model.datetime)
                            @Html.DatePickerFor(model => model.datetime)
                        </div>*@
                       
                    </div>
                  
                    <div class="row">
                        <input type="submit" value="حفظ" class="btn btn-success"  />
                        @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                    </div>
                            
                </form>
            </div>
        </div>
    </div>
           
</div>

}



