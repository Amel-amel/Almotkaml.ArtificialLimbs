                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered table-hover dataTables-example">
                                <thead>
                                    <tr>
                                        <th>ر.ت</th>
                                        <th>@Html.DisplayNameFor(model => model.MeasurementModel)</th>
                                        <th>@Html.DisplayNameFor(model => model.AmputationPart)</th>
                                        <th>@Html.DisplayNameFor(model => model.Part)</th>
                                        <th>@Html.DisplayNameFor(model => model.PartMeasure)</th>
                                        <th>@Html.DisplayNameFor(model => model.ShoeNO)</th>
                                        <th>@Html.DisplayNameFor(model => model.Note)</th>

                                        @*@if (Model.CanEdit)
                            {*@
                                        <th>التعديل</th>
                                        @*}
                            @if (Model.CanDelete)
                            {*@
                                        <th>الحذف</th>
                                        @*}*@
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                    var count = 0;
                                    }
                                    @foreach (var item in Model.AmputationDetailsGrid)
                                {
                                    count++;
                                <tr class="gradeX">
                                    <td>@count</td>
                                    <th>@typeof(MeasurementModel).DisplayFieldName(item.MeasurementModel.ToString())</th>
                                    <th>@typeof(AmputationPart).DisplayFieldName(item.AmputationPart.ToString())</th>
                                    <th>@Html.DisplayFor(model => item.MeasurementNumberModel)</th>
                                    <th>@Html.DisplayFor(model => item.PartMeasure)</th>
                                    <th>@Html.DisplayFor(model => item.ShoeNO)</th>
                                    <th>@Html.DisplayFor(model => item.Note)</th>


                                    @*@if (Model.CanEdit)
                        {*@
                                    <td>
                                        @Html.ActionLink("تعديل", "Edit", new { ID = item.AmputationDetailsID }, new { @class = "btn btn-primary" })
                                    </td>
                                    @*}*@
                                    @*@if (Model.CanDelete)
                        {*@
                                    <td>

                                        @Html.ActionLink("حذف", "Delete", new { ID = item.AmputationDetailsID }, new { @class = "btn btn-danger" })
                                    </td>
                                    @*}*@
                                </tr>
                                }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="row">
                            @Html.ActionLink("الرجوع", controllerName: "AmputationStatues", actionName: "Index", routeValues: null, htmlAttributes: new { @class = "btn btn-info" })
                    </div>
                    </div>
            </div>
        </div>

    </div>
</div>

