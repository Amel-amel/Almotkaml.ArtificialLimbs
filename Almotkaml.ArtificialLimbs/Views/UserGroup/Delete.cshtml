@model Almotkaml.ArtificialLimbs.Models.UserGroupModel 

@{
    ViewBag.Title = "حذف مجموعة";
}

    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title ">حذف مجموعة</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <h3>هل انت متأكد من حذف العنصر <strong></strong></h3>
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.HiddenFor(model => model.UserGroupID)
                                    @Html.DisplayNameFor(model => model.GroupTitle)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.GroupTitle)
                                </dd>

                            </dl>
                        </div>
                    </div>
             
                              
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="form-group">
                                <input type="submit" value="حذف" class="btn btn-danger" />
                                @Html.ActionLink("الرجوع للقائمة", "Index", null, new { @class = "turn_back btn btn-info" })
                            </div>
                        </div>
                    </div>

                }
                
            </div></div> </div> </div> 