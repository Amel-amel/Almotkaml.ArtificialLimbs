@model Almotkaml.ArtificialLimbs.Models.PatientModel
@using Almotkaml.ArtificialLimbs.Global.Herbler
@using Almotkaml.ArtificialLimbs.Models

@{
    ViewBag.Title = "اضافة مرضى";
}

@using (Html.BeginForm("Create", "Patient", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.PatientID)

    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title ">اضافة مريض</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>

                <div class="panel-body">
                    @Html.Note()
                    @*<div class="alert alert-warning" role="alert"><strong>تنبيه!</strong> </div>*@
                    <form>
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PatientName)
                                    @Html.TextBoxFor(model => model.PatientName, new { @class = "field_text form-control"  })
                                    @Html.ValidationMessageFor(model => model.PatientName)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.BirthDate, htmlAttributes: new { @class = "control-label " })
                                    @Html.DatePickerFor(model => model.BirthDate)
                                    @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Gender)
                                    @Html.EnumDropDownListFor(model => model.Gender, "--اختر--", new { @class = "field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.Gender)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextBoxFor(model => model.PhoneNumber, new { @class = "field_text form-control" })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NationalityID)
                                    @Html.DropDownListFor(model => model.NationalityID, new SelectList(Model.NationalityList, nameof(NationalityListItem.NationalityId), nameof(NationalityListItem.Name)), "--اختر--", new { @class = "Select2 field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.NationalityID)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.NationalityNumber, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextBoxFor(model => model.NationalityNumber, new { @class = "field_text form-control" })
                                    @Html.ValidationMessageFor(model => model.NationalityNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CityID)
                                    @Html.DropDownListFor(model => model.CityID, new SelectList(Model.CityList, nameof(CityListItem.CityId), nameof(CityListItem.Name)), "--اختر--", new { @class = "Select2 field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.CityID)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.PlaceId)
                                    @Html.DropDownListFor(model => model.PlaceId, new SelectList(Model.PlaceList, nameof(PlaceListItem.PlaceId), nameof(PlaceListItem.Name)), "--اختر--", new { @class = "Select2 field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.PlaceId)
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.RegistrationDate, htmlAttributes: new { @class = "control-label " })
                                    @Html.DatePickerFor(model => model.RegistrationDate)
                                    @Html.ValidationMessageFor(model => model.RegistrationDate, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextAreaFor(model => model.Note, new { @class = "field_text form-control" })
                                    @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" value="حفظ" class="btn btn-success" />
                            @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}


@section Scripts {

    <script>
    $(document).ready(function () {
        $('.datepicker').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            todayHighlight: true,
            format: "yyyy-mm-dd",
            endDate: '+0d',
            startDate : '-100y'
        });

        $('.date-popup').datepicker({
            keyboardNavigation: false,
            forceParse: false,
            todayHighlight: true,
            format: "yyyy-mm-dd"
        });

        $('#date-popup input').datepicker({
            //multidate: true
            startDate: '-3d',
            format: "dd/mm/yyyy"
        });
        $('#year-view').datepicker({
            startView: 2,
            keyboardNavigation: false,
            forceParse: false,
            format: "MM/dd/yyyy"
        });

        $(".select2").select2();
        $(".select2-placeholer").select2({
            allowClear: true
        });

    });
    </script>
}

