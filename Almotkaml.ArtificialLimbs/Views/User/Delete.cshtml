@model Almotkaml.ArtificialLimbs.Models.UserModel 
@using Almotkaml.ArtificialLimbs.Models;


@{
    ViewBag.Title = "حذف مستخدم";
}

@using (Html.BeginForm("Delete", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.UserID)
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })


    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title ">حذف مستخدم</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="form-group col-md-4">
                            <h3>هل انت متأكد من حذف العنصر <strong> مستخدم </strong></h3>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.HiddenFor(model => model.UserID)
                                    @Html.DisplayNameFor(model => model.UserName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.UserName)
                                </dd>
                              
                                <dt>
                                    @Html.DisplayNameFor(model => model.UserTitle)
                                </dt>
                                <dd>
                                    @Html.DisplayFor(model => model.UserTitle)
                                </dd>

                            </dl>

                            <div class="row">
                                <input type="submit" value="حذف" class="btn btn-danger " />
                                @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}