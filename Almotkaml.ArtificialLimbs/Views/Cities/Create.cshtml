@model Almotkaml.ArtificialLimbs.Models.CityModel
@using Almotkaml.ArtificialLimbs.Models
@{
    ViewBag.Title = "اضافة";
    Html.EnableClientValidation(false);
}


@using (Html.BeginForm("Create", "Cities", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.CityId)

    <div class="row">
        <div class="col-lg-12 animatedParent animateOnce z-index-50">
            <div class="panel panel-default animated fadeInUp">
                <div class="panel-heading clearfix">
                    <h3 class="panel-title ">اضافة المدن</h3>
                    <ul class="panel-tool-options">
                        <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                        <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                        <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                    </ul>
                </div>

                <div class="panel-body">
                    <form>
                        <div class="row">
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.CountryId)
                                    @Html.DropDownListFor(model => model.CountryId, new SelectList(Model.CountryList, nameof(CountryListItem.CountryId), nameof(CountryListItem.Name)), "--اختر--", new { @class = "Select2 field_menu form-control" })
                                    @Html.ValidationMessageFor(model => model.CountryId)
                                </div>
                            </div>
                            <div class="col-lg-3 col-md-4 col-sm-6">
                                <div class="form-group">
                                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label " })
                                    @Html.TextBoxFor(model => model.Name, new { @class = "field_text form-control" })

                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <input type="submit" value="حفظ" class="btn btn-success" />
                            @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
}
