@model Almotkaml.ArtificialLimbs.Models.BranchModel

@{
    ViewBag.Title = "حذف فرع بلدي";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Delete", "Branch", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.BranchId)

<div class="row">
    <div class="col-lg-12 animatedParent animateOnce z-index-50">
        <div class="panel panel-default animated fadeInUp">
            <div class="panel-heading clearfix">
                <h3 class="panel-title ">حذف فرع بلدي</h3>
                <ul class="panel-tool-options">
                    <li><a data-rel="collapse" href="#"><i class="icon-down-open"></i></a></li>
                    <li><a data-rel="reload" href="#"><i class="icon-arrows-ccw"></i></a></li>
                    <li><a data-rel="close" href="#"><i class="icon-cancel"></i></a></li>
                </ul>
            </div>
            <div class="panel-body">
                <form>
                    <div class="row">
                        <div class="form-group col-md-4">
                            <h3>هل انت متأكد من حذف العنصر <strong> فرع بلدي </strong></h3>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt>
                                    @Html.HiddenFor(model => model.BranchId)
                                    @Html.DisplayNameFor(model => model.BranchName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.BranchName)
                                </dd>

                            </dl>
                        </div>
                    </div>
                    <div class="row">
                        @*<a class="btn btn-danger" asp-area="" asp-controller="Branch" asp-action="Delete" asp-route-id="@model.BranchId">ddd</a>*@
                        <input type="submit"  value="حذف"  class="btn btn-danger" /> 
                        @Html.ActionLink("الرجوع", "Index", null, new { @class = "btn btn-info" })
                    </div>

                </form>
            </div>
        </div>
    </div>

</div>
}

